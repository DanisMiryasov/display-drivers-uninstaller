<Window x:Class="frmLog" x:Name="frmLog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Display_Driver_Uninstaller"
	Title="Log" Height="484" Width="753" >
	
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		
			<ListBox ItemsSource="{Binding Log.LogEntries, Mode=OneWay}" 
					 ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
					 ScrollViewer.VerticalScrollBarVisibility="Visible" 
					 ScrollViewer.IsDeferredScrollingEnabled="True"
					 Focusable="False" 
					 HorizontalContentAlignment="Stretch">
				<ListBox.ItemContainerStyle>
					<Style TargetType="{x:Type Control}" >
						<Setter Property="Focusable" Value="False" />
					</Style>
				</ListBox.ItemContainerStyle>
			</ListBox>


		<Border Grid.Row="1" BorderThickness="0,1,0,0" BorderBrush="Black">
			<Button Margin="10" Content="Close" Grid.Row="1" Name="btnClose" HorizontalAlignment="Right" Width="80" Height="30" />
		</Border>
		<Button Content="..and binding in action &lt;-- click" Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="160,18,0,0" Name="Button1" VerticalAlignment="Top" Width="240" />
		<Button Grid.Row="1" Height="41" HorizontalAlignment="Left" Name="Button2" VerticalAlignment="Top" Width="154" Content="Launch Threads" />
		<Button Margin="0,11,96,10" Content="Clear Log" Grid.Row="1"  HorizontalAlignment="Right" Width="80" Height="30" Name="Button3" />

		<TextBlock Grid.Row="1"  HorizontalAlignment="Left" Margin="406,18,0,0" Name="TextBox1" VerticalAlignment="Top" >
			Items: <TextBlock Text="{Binding Log.LogEntries.Count, Mode=OneWay, FallbackValue=0}" />
		</TextBlock>
	</Grid>
</Window>
