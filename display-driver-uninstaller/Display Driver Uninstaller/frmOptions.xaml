<Window x:Class="frmOptions" x:Name="frmOptions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:conv="clr-namespace:Display_Driver_Uninstaller.Converters"
    Title="frmOptions" Height="495.209" Width="498.388">

    <Window.Resources>
        <conv:NullableBooleanToBoolean x:Key="NulBoolToBool"></conv:NullableBooleanToBoolean>
    </Window.Resources>

    <Grid DataContext="{Binding Settings}">
        <CheckBox x:Name="lblRemAMDDirs" IsChecked="{Binding RemoveAMDDirs, Converter={StaticResource NulBoolToBool}}" Content="lblRemAMDDirs" HorizontalAlignment="Left" Margin="13,348.05,0,0" VerticalAlignment="Top" />
        <CheckBox x:Name="lblRemAMDKMPFD" IsChecked="{Binding RemoveAMDKMPFD, Converter={StaticResource NulBoolToBool}}" Content="lblRemAMDKMPFD" HorizontalAlignment="Left" Margin="13,370.05,0,0" VerticalAlignment="Top" />
        <CheckBox x:Name="lblRemAMDAudioBus" IsChecked="{Binding RemoveAMDAudioBus, Converter={StaticResource NulBoolToBool}}" Content="lblRemAMDAudioBus" HorizontalAlignment="Left" Margin="13,390.05,0,0" VerticalAlignment="Top" />
        <CheckBox x:Name="lblRemCrimsonCache" IsChecked="{Binding RemoveCrimsonCache, Converter={StaticResource NulBoolToBool}}" Content="lblRemCrimsonCache" HorizontalAlignment="Left" Margin="13,412.05,0,0" VerticalAlignment="Top" />

        <CheckBox x:Name="lblRemNvidiaDirs" IsChecked="{Binding RemoveNvidiaDirs, Converter={StaticResource NulBoolToBool}}" Content="lblRemNvidiaDirs" HorizontalAlignment="Left" Margin="13,222.999,0,0" VerticalAlignment="Top" />
        <CheckBox x:Name="lblRemPhysX" IsChecked="{Binding RemovePhysX, Converter={StaticResource NulBoolToBool}}" Content="lblRemPhysX" HorizontalAlignment="Left" Margin="13,244.999,0,0" VerticalAlignment="Top" />
        <CheckBox x:Name="lblRem3DtvPlay" IsChecked="{Binding Remove3DTVPlay, Converter={StaticResource NulBoolToBool}}" Content="lblRem3DtvPlay" HorizontalAlignment="Left" Margin="13,266.999,0,0" VerticalAlignment="Top" />
        <CheckBox x:Name="lblRemGFE" IsChecked="{Binding RemoveGFE, Converter={StaticResource NulBoolToBool}}" Content="lblRemGFE" HorizontalAlignment="Left" Margin="13,288.999,0,0" VerticalAlignment="Top" />

        <CheckBox x:Name="lblRemMonitors" IsChecked="{Binding RemoveMonitors, Converter={StaticResource NulBoolToBool}}" Content="lblRemMonitors" HorizontalAlignment="Left" Margin="13,30.471,0,0" VerticalAlignment="Top" />

        <CheckBox x:Name="lblsaveLogs" IsChecked="{Binding SaveLogs, Converter={StaticResource NulBoolToBool}}" Content="lblsaveLogs" HorizontalAlignment="Left" Margin="13,50.471,0,0" VerticalAlignment="Top" />
        <CheckBox x:Name="lblcreateRestorePoint" IsChecked="{Binding CreateRestorePoint, Converter={StaticResource NulBoolToBool}}" Content="lblcreateRestorePoint" HorizontalAlignment="Left" Margin="13,70.471,0,0" VerticalAlignment="Top" />
        <CheckBox x:Name="lblshowSafeModeMsg" IsChecked="{Binding ShowSafeModeMsg, Converter={StaticResource NulBoolToBool}}" Content="lblshowSafeModeMsg" HorizontalAlignment="Left" Margin="13,92.471,0,0" VerticalAlignment="Top" />
        <CheckBox x:Name="lblUseRoamingCfg" IsChecked="{Binding UseRoamingConfig, Converter={StaticResource NulBoolToBool}}" Content="lblUseRoamingCfg" HorizontalAlignment="Left" Margin="13,112.471,0,0" VerticalAlignment="Top" />
        <CheckBox x:Name="lblCheckUpdates" IsChecked="{Binding CheckUpdates, Converter={StaticResource NulBoolToBool}}" Content="lblDontCheckUpdates" HorizontalAlignment="Left" Margin="13,132.471,0,0" VerticalAlignment="Top" />

        <Button Content="btnClose" Name="btnClose" HorizontalAlignment="Right" Width="80" Height="30" VerticalAlignment="Bottom" Margin="0,0,10,10" />
        <CheckBox x:Name="lblVulkan" IsChecked="{Binding RemoveVulkan, Converter={StaticResource NulBoolToBool}}" Content="lblVulkan" HorizontalAlignment="Left" Margin="13,152.569,0,0" VerticalAlignment="Top" />
        <CheckBox x:Name="lblUseSetupAPI" IsChecked="{Binding UseSetupAPI, Converter={StaticResource NulBoolToBool}}" Content="lblUseSetupAPI" HorizontalAlignment="Left" Margin="13,172.569,0,0" VerticalAlignment="Top" />
        <Label x:Name="lblGeneral" Content="lblGeneral" HorizontalAlignment="Left" Margin="13,0,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label x:Name="lblNvidiaspecific" Content="lblNvidiaspecific" HorizontalAlignment="Left" Margin="13,196.999,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label x:Name="lblAmdspecific" Content="lblAmdspecific" HorizontalAlignment="Left" Margin="13,322.05,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
    </Grid>
</Window>
