<Window x:Name="frmLaunch" x:Class="frmLaunch"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="frmLaunchxaml" Height="299" Width="391" ShowInTaskbar="False" ResizeMode="NoResize">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="110" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="45" />
		</Grid.RowDefinitions>

		<Label Name="Label1" Content="TODO: Put image here" Margin="6" />
		
		<ComboBox x:Name="cbBootOption" HorizontalAlignment="Left" VerticalAlignment="Top" Width="282" SelectedIndex="0" Grid.Row="1" Margin="6">
			<ComboBoxItem Content="Normal (Dont remove, until translation fixed)" />
		</ComboBox>

		<Label Name="lblNotSafeMode" Content="lblNotSafeMode" Grid.Row="2" Margin="6" />

		<DockPanel Grid.Row="3" Margin="6">
			<Button x:Name="btnAccept" Content="Accept" HorizontalAlignment="Left" Width="100" />
			<Button x:Name="btnClose" Content="Close" HorizontalAlignment="Right" Width="100" />
		</DockPanel>

	</Grid>
</Window>
